{
  "name": "chickenpoo-survev-wrapper",
  "version": "1.0.1",
  "description": "possibly first ever custom survev.io desktop client?",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "author": "chickenPoo",
  "license": "GPL-3.0-only",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "express": "^5.2.1",
    "electron-updater": "^6.7.3"
  },
  "build": {
    "appId": "io.github.chickenpoo.survevwrapper",
    "productName": "ChickenPoo's Amazing Survev Client",
    "files": [
      "main.js",
      "preload.js",
      "mods/**/*",
      "skins/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "forceCodeSigning": "false"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chickenpoo351",
        "repo": "chickenPoo-Amazing-Survev-Client"
      }
    ],
    "electronDownload": {
      "mirror": "https://github.com/electron/electron/releases/download/"
    }
  }
}
